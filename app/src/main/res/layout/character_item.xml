<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/name" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:layout_toRightOf="@+id/name_text"
            android:layout_alignLeft="@+id/culture"
            android:textStyle="bold"
            tools:text="fake name"/>

        <TextView
            android:id="@+id/culture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text"
            android:text="@string/culture" />

        <TextView
            android:id="@+id/culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:layout_below="@+id/name_text"
            android:layout_toRightOf="@+id/culture_text"
            android:textStyle="bold"
            tools:text="fake culture"/>


        <TextView
            android:id="@+id/titles_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/culture_text"
            android:text="@string/titles" />

        <TextView
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:layout_below="@+id/culture_text"
            android:layout_toRightOf="@+id/titles_text"
            android:layout_alignLeft="@+id/culture"
            android:textStyle="bold"
            tools:text="fake titles"/>

        <TextView
            android:id="@+id/aliases_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titles"
            android:text="@string/aliases" />

        <TextView
            android:id="@+id/aliases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:layout_below="@+id/titles"
            android:layout_toRightOf="@+id/aliases_text"
            android:layout_alignLeft="@+id/culture"
            android:textStyle="bold"
            tools:text="fake aliases"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>